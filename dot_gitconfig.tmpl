[user]
	name = {{ .git.name }}
	email = {{ .git.email }}
{{- if and .git.signingKey (ne .git.signingKey "none") }}
	signingkey = {{ .git.signingKey }}
[commit]
	gpgsign = true
[gpg]
	program = gpg
{{- else }}
[commit]
	gpgsign = false
{{- end }}

[alias]
	st = status -sb
	co = checkout
	cb = checkout -b
	cm = commit -m
	ca = commit --amend
	can = commit --amend --no-edit
	unstage = reset HEAD --
	last = log -1 HEAD --stat
	lg = log --oneline --graph --decorate -20
	br = branch -vv
	df = diff
	dfs = diff --staged
	p = push
	pf = push --force-with-lease
	pl = pull --rebase
	undo = reset --soft HEAD~1
	stash-all = stash save --include-untracked

[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	line-numbers = true
	side-by-side = true
	syntax-theme = gruvbox-dark

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default
