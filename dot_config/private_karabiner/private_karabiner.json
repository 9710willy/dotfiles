{
    "profiles": [
        {
            "complex_modifications": {
                "parameters": { "basic.to_if_alone_timeout_milliseconds": 200 },
                "rules": [
                    {
                        "description": "Caps Lock → Hyper Key (Ctrl+Opt+Cmd+Shift) when held, Escape when tapped alone",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "caps_lock",
                                    "modifiers": { "optional": ["any"] }
                                },
                                "to": [
                                    {
                                        "key_code": "left_shift",
                                        "modifiers": ["left_control", "left_option", "left_command"]
                                    }
                                ],
                                "to_if_alone": [{ "key_code": "escape" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Hyper+H/J/K/L → Arrow Keys (Vim-style navigation anywhere)",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "h",
                                    "modifiers": { "mandatory": ["left_control", "left_option", "left_command", "left_shift"] }
                                },
                                "to": [{ "key_code": "left_arrow" }],
                                "type": "basic"
                            },
                            {
                                "from": {
                                    "key_code": "j",
                                    "modifiers": { "mandatory": ["left_control", "left_option", "left_command", "left_shift"] }
                                },
                                "to": [{ "key_code": "down_arrow" }],
                                "type": "basic"
                            },
                            {
                                "from": {
                                    "key_code": "k",
                                    "modifiers": { "mandatory": ["left_control", "left_option", "left_command", "left_shift"] }
                                },
                                "to": [{ "key_code": "up_arrow" }],
                                "type": "basic"
                            },
                            {
                                "from": {
                                    "key_code": "l",
                                    "modifiers": { "mandatory": ["left_control", "left_option", "left_command", "left_shift"] }
                                },
                                "to": [{ "key_code": "right_arrow" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Hyper+T → Open Ghostty",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "t",
                                    "modifiers": { "mandatory": ["left_control", "left_option", "left_command", "left_shift"] }
                                },
                                "to": [{ "shell_command": "open -a 'Ghostty'" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Hyper+B → Open Browser (Arc/Chrome)",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "b",
                                    "modifiers": { "mandatory": ["left_control", "left_option", "left_command", "left_shift"] }
                                },
                                "to": [{ "shell_command": "open -a 'Arc' || open -a 'Google Chrome'" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Hyper+S → Open Slack",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "s",
                                    "modifiers": { "mandatory": ["left_control", "left_option", "left_command", "left_shift"] }
                                },
                                "to": [{ "shell_command": "open -a 'Slack'" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Hyper+C → Open VS Code",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "c",
                                    "modifiers": { "mandatory": ["left_control", "left_option", "left_command", "left_shift"] }
                                },
                                "to": [{ "shell_command": "open -a 'Visual Studio Code'" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Fn+Caps Lock → Toggle actual Caps Lock",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "caps_lock",
                                    "modifiers": { "mandatory": ["fn"] }
                                },
                                "to": [{ "key_code": "caps_lock" }],
                                "type": "basic"
                            }
                        ]
                    }
                ]
            },
            "name": "Default",
            "selected": true,
            "virtual_hid_keyboard": {
                "country_code": 0,
                "keyboard_type_v2": "ansi"
            }
        }
    ]
