{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "enabledPlugins": {
    "pr-review-toolkit@claude-code-plugins": true,
    "frontend-design@claude-code-plugins": true,
    "feature-dev@claude-code-plugins": true,
    "security-guidance@claude-code-plugins": true,
    "code-review@claude-code-plugins": true,
    "commit-commands@claude-code-plugins": true,
    "agent-sdk-dev@claude-code-plugins": true,
    "hookify@claude-code-plugins": true,
    "plugin-dev@claude-code-plugins": true,
    "ralph-wiggum@claude-code-plugins": true,
    "typescript-lsp@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true,
  "hooks": {
    "PostToolUse": [
      {
        "matcher": {
          "tools": ["Write", "Edit"]
        },
        "hooks": [
          {
            "type": "command",
            "command": "[ -f .prettierrc ] || [ -f .prettierrc.json ] || [ -f .prettierrc.js ] && npx prettier --write \"$CLAUDE_FILE_PATH\" 2>/dev/null || true"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": {},
        "hooks": [
          {
            "type": "command",
            "command": "echo 'âœ… Task complete. Consider running /verify to check your changes.'"
          }
        ]
      }
    ]
  },
  "feedbackSurveyState": {
    "lastShownTime": 1754342017186
  }
}
