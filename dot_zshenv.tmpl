{{- $brewPrefix := "/usr/local" -}}
{{- if eq .chezmoi.arch "arm64" -}}
{{-   $brewPrefix = "/opt/homebrew" -}}
{{- end -}}
# .zshenv - runs for ALL shells (interactive, non-interactive, login, non-login)
# Keep this minimal! Only truly universal env vars belong here.

# Reactivate virtualenv if we're in one (for subshells)
if [[ -n $VIRTUAL_ENV && -e "${VIRTUAL_ENV}/bin/activate" ]]; then
  source "${VIRTUAL_ENV}/bin/activate"
fi

# Rust/Cargo (if installed)
[[ -d "$HOME/.cargo/bin" ]] && export PATH="$HOME/.cargo/bin:$PATH"

# Claude Code privacy - disable all non-essential traffic (telemetry, error reporting)
export CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC=1
